                    "$jsonSchema": {
                      "bsonType": "object",
                      "required": [
                        "code",
                        "name",
                        "description",
                        "image_ids"
                      ],
                      "properties": {
                        "code": {
                          "bsonType": "string"
                        },
                        "name": {
                          "bsonType": "string"
                        },
                        "description": {
                          "bsonType": "string"
                        },
                        "image_ids": {
                          "bsonType": "array",
                          "items": {
                            "bsonType": "string"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        ]
      }
    }
  ]
}
